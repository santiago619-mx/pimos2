            "post": {
                "tags": [
                    "Productos"
                ],
                "summary": "Crear un nuevo producto",
                "description": "Registra un nuevo producto. Opcionalmente, permite definir el stock inicial.",
                "operationId": "4ff8851cb6bfe92aa226cdc804917ff0",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre_gomita",
                                    "sabor",
                                    "tamano",
                                    "precio"
                                ],
                                "properties": {
                                    "nombre_gomita": {
                                        "description": "Nombre del producto, debe ser único.",
                                        "type": "string",
                                        "example": "Oso Gomita Clásico"
                                    },
                                    "sabor": {
                                        "description": "Sabor del producto.",
                                        "type": "string",
                                        "example": "Fresa Ácida"
                                    },
                                    "tamano": {
                                        "description": "Tamaño del producto.",
                                        "type": "string",
                                        "example": "Mediano"
                                    },
                                    "precio": {
                                        "description": "Precio unitario.",
                                        "type": "number",
                                        "format": "float",
                                        "example": 5.5
                                    },
                                    "cantidad_existencias": {
                                        "description": "Stock inicial (opcional).",
                                        "type": "integer",
                                        "example": 100,
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Producto creado con éxito.",
                        "content": {
                            "application/json": {
