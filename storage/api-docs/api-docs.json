                "operationId": "93da66c8bc6b35165f6118fbd75e9097",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del registro de inventario a actualizar.",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "cantidad_existencias"
