                                    "cantidad_existencias"
                                ],
                                "properties": {
                                    "producto_id": {
                                        "description": "ID del producto a inventariar.",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "cantidad_existencias": {
                                        "description": "Cantidad inicial de existencias.",
                                        "type": "integer",
                                        "example": 50
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registro de inventario creado con éxito.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/InventarioResource"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "No autorizado"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                },
                "security": [
                    {
                        "bearer_token": []
                    }
                ]
            }
        },
