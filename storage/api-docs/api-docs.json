    "components": {
        "schemas": {
            "InventarioResource": {
                "title": "Inventario Resource",
                "description": "Estructura de la respuesta para un registro de Inventario",
                "properties": {
                    "id": {
                        "description": "ID del registro de inventario",
                        "type": "integer",
                        "example": 5
                    },
                    "tipo": {
                        "type": "string",
                        "example": "inventario"
                    },
                    "atributos": {
                        "properties": {
                            "cantidad_existencias": {
                                "type": "integer",
                                "example": 100
                            }
                        },
                        "type": "object"
                    },
                    "relaciones": {
                        "properties": {
                            "producto": {
                                "description": "Detalles básicos del producto",
                                "properties": {
                                    "id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "nombre": {
                                        "type": "string",
                                        "example": "Gomita de Fresa"
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "ProductoCollection": {
                "title": "Producto Collection",
                "description": "Estructura de la respuesta para el listado de Productos",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "id": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "tipo": {
                                    "type": "string",
                                    "example": "producto"
                                },
                                "atributos": {
                                    "properties": {
                                        "nombre": {
                                            "type": "string",
                                            "example": "Oso Gomita Clásico"
                                        },
                                        "sabor": {
                                            "type": "string",
                                            "example": "Fresa Ácida"
                                        },
                                        "precio": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 5.5
                                        },
                                        "stock_actual": {
                                            "description": "Cantidad de existencias en inventario",
                                            "type": "integer",
                                            "example": 100
                                        }
                                    },
                                    "type": "object"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "ProductoResource": {
                "title": "Producto Resource",
                "description": "Estructura de la respuesta detallada para un solo Producto",
                "properties": {
                    "id": {
                        "description": "ID del producto",
                        "type": "integer",
                        "example": 1
                    },
                    "tipo": {
                        "type": "string",
                        "example": "producto"
                    },
                    "atributos": {
                        "properties": {
                            "nombre": {
                                "type": "string",
                                "example": "Oso Gomita Clásico"
                            },
                            "sabor": {
                                "type": "string",
                                "example": "Fresa Ácida"
                            },
                            "tamano": {
                                "type": "string",
                                "example": "Mediano"
                            },
                            "precio": {
                                "type": "number",
                                "format": "float",
                                "example": 5.5
                            }
                        },
                        "type": "object"
                    },
                    "relaciones": {
                        "$ref": "#/components/schemas/ProductoResourceRelations"
                    }
                },
                "type": "object"
            },
            "ProductoResourceRelations": {
                "properties": {
                    "inventario": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/InventarioResource"
                            }
                        ],
                        "nullable": true,
                        "description": "Stock asociado al producto, si existe."
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "name": "Authorization",
                "in": "header",
                "bearerFormat": "token",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Inventario",
