            "post": {
                "tags": [
                    "Inventario"
                ],
                "summary": "Crear nuevo registro de inventario",
                "description": "Crea un nuevo registro de stock para un producto que no tenga uno.",
                "operationId": "4bdb1deb011d85be4aeb4a74c1fddb5c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
