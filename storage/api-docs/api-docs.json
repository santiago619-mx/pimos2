                "summary": "Consultar todo el inventario",
                "description": "Retorna una lista de todos los registros de inventario con los productos asociados.",
                "operationId": "4addcd7798fe1538104ed903e872178f",
                "responses": {
                    "200": {
                        "description": "Operación exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/InventarioResource"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "No autorizado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
