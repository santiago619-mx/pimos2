                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del producto.",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operación exitosa",
